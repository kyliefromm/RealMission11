@page "/admin/books/details/{id:long}"

<h3 class="bg-info text-white text-center p-1">Details</h3>

<table class="table table-sm table-bordered table-striped">
    <tbody>
        <tr>
            <th>Book ID:</th>
            <td>@book.BookID</td>
            <th>Title:</th>
            <td>@book.Title</td>
            <th>Author:</th>
            <td>@book.Author</td>
            <th>Publisher:</th>
            <td>@book.Publisher</td>
            <th>ISBN:</th>
            <td>@book.ISBN</td>
            <th>Classification:</th>
            <td>@book.Classification</td>
            <th>Category:</th>
            <td>@book.Category</td>
            <th>PageCount:</th>
            <td>@book.PageCount</td>
            <th>Price:</th>
            <td>@book.Price</td>

        </tr>

    </tbody>

</table>

<NavLink class="btn btn-warning" href="@EditUrl">Edit</NavLink>
<NavLink class="btn btn-secondary" href="/admin/books">Back</NavLink>

@code {
    [Inject]
    public IBookRepository repo { get; set; }
    [Parameter]
    public long Id { get; set; }

    public Book book { get; set; }

    protected override void OnParametersSet()
    {
        book = repo.Books.FirstOrDefault(x => x.BookID == Id);
    }

    public string EditUrl => $"/admin/books/edit/{book.BookID}";



}
